<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.OpenWith" parent="Base.Theme.OpenWith">
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.OpenWith</item>
    <item name="android:listPreferredItemPaddingStart">?listPreferredItemPaddingLeft</item>
    <item name="android:listPreferredItemPaddingEnd">?listPreferredItemPaddingRight</item>
  </style>

  <style name="Theme.Transparent" parent="Base.Theme.OpenWith">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@null</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

  <style name="Theme.Transparent.NoAnimation" parent="Theme.Transparent">
    <item name="android:windowAnimationStyle">@null</item>
  </style>

  <style name="PreferenceThemeOverlay.OpenWith" parent="PreferenceThemeOverlay.v14.Material">
    <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.OpenWith</item>
    <item name="preferenceFragmentStyle">@style/PreferenceFragment.OpenWith</item>
    <item name="preferenceStyle">@style/Preference.OpenWith</item>
    <item name="preferenceCategoryStyle">@style/Preference.Category.OpenWith</item>
  </style>

  <style name="PreferenceFragment.OpenWith" parent="PreferenceFragment.Material">
    <item name="android:divider">@null</item>
  </style>

  <style name="Preference.OpenWith" parent="Preference.Material">
    <item name="android:layout">@layout/preference_open_with</item>
  </style>

  <style name="Preference.Category.OpenWith" parent="Preference.Category.Material">
    <item name="android:layout">@layout/preference_category_open_with</item>
  </style>

</resources>
